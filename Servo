from gpiozero import Servo
from time import sleep

myGPIO=17

maxPW=2.0/1000
minPW=0/1000

myServo = Servo(myGPIO,min_pulse_width=minPW,max_pulse_width=maxPW)

while True:
  myServo.min()
  print("Wait...")
  sleep(1)
  myServo.mid()
  print("Fire")
  sleep(0.5)
  myServo.min()
  print("Perfect launch just like every single other time")
  myServo.max()
  sleep(0.5)
  myServo.min()
  break
